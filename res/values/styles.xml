<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style used for the custom title bar textviews used in the app -->
	<style name="TitleBarText">
	    <item name="android:layout_width">0dip</item>
	    <item name="android:layout_height">20dip</item>
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:layout_weight">.5</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">14sp</item>
	</style>

	<!-- Style used predominantly for spinners -->
	<style name="ChoiceSpinner">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">55dip</item>
	    <item name="android:background">@drawable/spinner</item>
	    <item name="android:textColor">@color/northern_colour</item>
	</style>

	<!-- Style used on buttons -->
    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:textColor">@color/northern_colour</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Unknown Status</item>
        <item name="android:background">@drawable/btn_white_basic</item>
    </style>

    <!-- Style used on the Widget for displaying line and station textviews -->
    <style name="WidgetLineStationText">
	    <item name="android:layout_width">0dip</item>
	    <item name="android:layout_height">16dip</item>
	    <item name="android:layout_margin">4dip</item>
	    <item name="android:layout_weight">.5</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">11sp</item>
	    <item name="android:singleLine">true</item>
	</style>
</resources>