<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TitleBarText">
	    <item name="android:layout_width">0dip</item>
	    <item name="android:layout_height">20dip</item>
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:layout_weight">.5</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">14sp</item>
	</style>

	<style name="ChoiceSpinner">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">45dip</item>
	    <item name="android:background">@drawable/spinner</item>
	    <item name="android:textColor">@color/northern_colour</item>
	</style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:textColor">@color/northern_colour</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Unknown Status</item>
        <item name="android:background">@drawable/btn_white_basic</item>
    </style>
</resources>